{
  "description": "Demultiplexing of PE reads with interleaved output",
  "arguments": [
    "--basename",
    "your_output",
    "--barcode-list",
    "barcodes.txt",
    "--interleaved-output"
  ],
  "files": {
    "input_1": [
      "input_1.fastq"
    ],
    "input_2": [
      "input_2.fastq"
    ],
    "barcodes": [
      "barcodes.txt"
    ],
    "output": [
      "your_output.sample_1.discarded.fastq",
      "your_output.sample_1.fastq",
      "your_output.sample_1.singleton.fastq",
      "your_output.sample_2.discarded.fastq",
      "your_output.sample_2.fastq",
      "your_output.sample_2.singleton.fastq",
      "your_output.unidentified.fastq"
    ],
    "json": [
      "your_output.json"
    ],
    "html": [
      "your_output.html"
    ]
  }
}
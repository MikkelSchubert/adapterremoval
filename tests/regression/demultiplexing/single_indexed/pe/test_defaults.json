{
  "description": "Demultiplexing of single-indexed PE reads using 1-3 threads",
  "exhaustive": true,
  "arguments": [
    "--adapter1",
    "AGATCGGAAGAGCACACGTCTGAACTCCAGTCA",
    "--adapter2",
    "AGATCGGAAGAGCGTCGTGTAGGGAAAGAGTGT",
    "--out-prefix",
    "your_output",
    "--out-discarded",
    "your_output",
    "--barcode-table",
    "barcodes.txt"
  ],
  "files": {
    "input_1": [
      "input_1.fastq"
    ],
    "input_2": [
      "input_2.fastq"
    ],
    "barcodes": [
      "barcodes.txt"
    ],
    "output": [
      "your_output.sample_1.discarded.fastq.gz",
      "your_output.sample_1.r1.fastq.gz",
      "your_output.sample_1.r2.fastq.gz",
      "your_output.sample_1.singleton.fastq.gz",
      "your_output.sample_2.discarded.fastq.gz",
      "your_output.sample_2.r1.fastq.gz",
      "your_output.sample_2.r2.fastq.gz",
      "your_output.sample_2.singleton.fastq.gz",
      "your_output.unidentified.r1.fastq.gz",
      "your_output.unidentified.r2.fastq.gz"
    ],
    "json": [
      "your_output.json"
    ],
    "html": [
      "your_output.html"
    ]
  }
}
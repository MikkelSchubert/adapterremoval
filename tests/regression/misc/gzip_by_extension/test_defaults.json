{
  "description": "Compression of output files based on the extension",
  "arguments": [
    "--out-prefix",
    "your_output",
    "--out-discarded",
    "your_output.discarded.fastq",
    "--out-file2",
    "your_output.r2.fastq"
  ],
  "files": {
    "input_1": [
      "input_1.fastq"
    ],
    "input_2": [
      "input_2.fastq"
    ],
    "output": [
      "your_output.discarded.fastq",
      "your_output.r1.fastq.gz",
      "your_output.r2.fastq",
      "your_output.singleton.fastq.gz"
    ],
    "ignore": [
      "your_output.json"
    ],
    "html": [
      "your_output.html"
    ]
  }
}
{
  "arguments": [
    "--basename",
    "your_output",
    "--prefix-read1",
    "R1_",
    "--prefix-read2",
    "R2_",
    "--prefix-merged",
    "M_",
    "--merge",
    "--minlength",
    "30"
  ],
  "files": {
    "input_1": [
      "input_1.fastq"
    ],
    "input_2": [
      "input_2.fastq"
    ],
    "output": [
      "your_output.discarded.fastq",
      "your_output.merged.fastq",
      "your_output.r1.fastq",
      "your_output.r2.fastq",
      "your_output.singleton.fastq"
    ],
    "ignore": [
      "your_output.json",
      "your_output.html"
    ]
  }
}
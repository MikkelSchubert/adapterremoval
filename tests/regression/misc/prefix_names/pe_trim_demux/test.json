{
  "description": "User-supplied prefixes must be added to trimmed and demultiplexed reads (PE)",
  "arguments": [
    "--barcode-list",
    "barcodes.txt",
    "--basename",
    "your_output",
    "--out-discarded",
    "your_output",
    "--prefix-read1",
    "R1_",
    "--prefix-read2",
    "R2_",
    "--prefix-merged",
    "M_",
    "--merge",
    "--minlength",
    "30"
  ],
  "files": {
    "input_1": [
      "input_1.fastq"
    ],
    "input_2": [
      "input_2.fastq"
    ],
    "barcodes": [
      "barcodes.txt"
    ],
    "output": [
      "your_output.sample_1.discarded.fastq",
      "your_output.sample_1.merged.fastq",
      "your_output.sample_1.r1.fastq",
      "your_output.sample_1.r2.fastq",
      "your_output.sample_1.singleton.fastq",
      "your_output.unidentified.r1.fastq",
      "your_output.unidentified.r2.fastq"
    ],
    "ignore": [
      "your_output.json",
      "your_output.html"
    ]
  }
}
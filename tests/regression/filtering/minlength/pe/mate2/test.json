{
  "description": "Filtering reads by minimum length, generating orphan mate 1 read",
  "arguments": [
    "--basename",
    "your_output",
    "--out-discarded",
    "your_output.discarded.fastq",
    "--minlength",
    "50"
  ],
  "files": {
    "input_1": [
      "input_1.fastq"
    ],
    "input_2": [
      "input_2.fastq"
    ],
    "output": [
      "your_output.discarded.fastq",
      "your_output.r1.fastq.gz",
      "your_output.r2.fastq.gz",
      "your_output.singleton.fastq.gz"
    ],
    "ignore": [
      "your_output.json",
      "your_output.html"
    ]
  }
}

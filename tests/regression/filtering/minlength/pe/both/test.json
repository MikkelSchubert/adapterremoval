{
  "description": "Filtering reads by minimum length, excluding both mate reads",
  "arguments": [
    "--basename",
    "your_output",
    "--out-discarded",
    "your_output.discarded.fastq",
    "--minlength",
    "50"
  ],
  "files": {
    "input_1": [
      "input_1.fastq"
    ],
    "input_2": [
      "input_2.fastq"
    ],
    "output": [
      "your_output.discarded.fastq",
      "your_output.r1.fastq",
      "your_output.r2.fastq",
      "your_output.singleton.fastq"
    ],
    "json": [
      "your_output.json"
    ],
    "html": [
      "your_output.html"
    ]
  }
}